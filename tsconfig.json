{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": ["es6", "esnext", "es2015", "DOM"],
    "baseUrl": ".",
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@modules/*": ["./modules/*"]
    },
    "noUnusedLocals": true,
    "noImplicitAny": true
  },
  "skipLibCheck": true,
  "include": ["./src/**/*"],
  "exclude": ["tests", "node_modules", "build"]
}
